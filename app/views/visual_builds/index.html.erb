<h1>Listing all builds for all repositories</h1>

<div id="container"></div>
<script type="text/javascript">
pieChart(<%=raw @draw %>, "container", "Result in % of all builds", "result");
</script>

<table class="table table-striped table-bordered table-hover">
 <tr>
    <th>Id</th>
    <th>Repository</th>
    <th>Finished</th>
    <th>Result</th>
  </tr>

<% @builds.each do |build| %>
  <tr>
    <td><%= build.id %></td>
    <td><%= build.repository_id %></td>
    <td><%= build.finished_at %></td>
    <td><%= build.result %></td>
  </tr>
<% end %>
</table>

<br />
<%= will_paginate @builds, :params => {:controller => "visualBuilds", :action=>"index" } %>
